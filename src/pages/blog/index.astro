---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const type = Astro.url.searchParams.get("type");
const filtered = type ? posts.filter((p) => p.data.type === type) : posts;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.tabs {
				display: flex;
				gap: 0.75rem;
				margin: 1rem 0;
			}
			.tabs a {
				text-decoration: none;
				padding: 0.25rem 0.5rem;
				border-radius: 6px;
				border: 1px solid rgba(0, 0, 0, 0.1);
			}
			.tabs a.active {
				background: var(--accent);
				color: white;
				border-color: transparent;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				border: 1px solid var(--rule);
				background-image: radial-gradient(
					rgba(0, 0, 0, 0.08) 1px,
					transparent 1px
				);
				background-size: 8px 8px;
			}
			ul li a {
				display: block;
				background: var(--paper);
				border: 1px solid var(--rule);
				position: relative;
			}
			ul li a::before {
				content: "";
				position: absolute;
				inset: 0;
				pointer-events: none;
				background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='180' height='180'><filter id='n'><feTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/><feColorMatrix type='saturate' values='0'/></filter><rect width='100%' height='100%' filter='url(%23n)' opacity='0.35'/></svg>");
				background-size: 180px 180px;
				opacity: 0.08;
				mix-blend-mode: multiply;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<nav class="tabs">
				<a href="/blog" class={type ? "" : "active"}>All</a>
				<a
					href="/blog?type=review"
					class={type === "review" ? "active" : ""}>Reviews</a
				>
				<a
					href="/blog?type=project"
					class={type === "project" ? "active" : ""}>Projects</a
				>
				<a
					href="/blog?type=shopping"
					class={type === "shopping" ? "active" : ""}>Shopping</a
				>
			</nav>
			<section>
				<ul>
					{
						filtered.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											width={720}
											height={360}
											src={post.data.heroImage}
											alt=""
										/>
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate
											date={post.data.pubDate}
										/>
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
